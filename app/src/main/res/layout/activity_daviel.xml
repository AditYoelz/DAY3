<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daviel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAVIEL"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/v4s"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/daviel"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:text="Ducati Diavel adalah salah satu model motor cruiser yang diproduksi oleh perusahaan otomotif Italia, Ducati. Diavel memiliki desain yang mencolok dan agresif, dengan garis-garis yang tajam dan siluet yang rendah. Model ini merupakan perpaduan antara gaya motor cruiser dengan elemen-elemen desain yang futuristik dan agresif, yang membuatnya menonjol di antara model-model lain dalam kelasnya."
        android:padding="16dp"
        android:layout_below="@+id/v4s"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/shr"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v4s"
        android:text="@string/share"
        android:layout_marginTop="280dp"/>

    <Button
        android:id="@+id/checkout"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v4s"
        android:layout_marginTop="280dp"
        android:text="@string/checkout"
        android:layout_marginLeft="270dp"
        />

</RelativeLayout>