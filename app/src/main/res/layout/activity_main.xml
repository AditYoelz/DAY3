<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="217dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ylx"
        />

    <ImageView
        android:id="@+id/icdc"
        android:layout_width="226dp"
        android:layout_height="126dp"
        android:src="@drawable/icon_dc"
        android:layout_below="@id/logo"
        android:layout_marginTop="30dp"
        />


    <Button
        android:id="@+id/dcbtn"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/icdc"
        android:layout_alignBottom="@+id/icdc"
        android:layout_centerInParent="true"
        android:layout_marginEnd="7dp"
        android:text="@string/discover"
        android:backgroundTint="#393E46"
        android:textSize="10sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/icbmw"
        android:layout_width="226dp"
        android:layout_height="126dp"
        android:src="@drawable/icon_bmw"
        android:layout_below="@id/icdc"
        android:layout_marginTop="20dp"

    />

    <Button
        android:id="@+id/bmwbtn"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/icbmw"
        android:layout_alignBottom="@id/icbmw"
        android:layout_marginEnd="7dp"
        android:text="@string/discover"
        android:backgroundTint="#393E46"
        android:textSize="10sp"
        android:textStyle="italic"
        />

    <ImageView
        android:id="@+id/icmv"
        android:layout_width="226dp"
        android:layout_height="126dp"
        android:src="@drawable/icon_mv"
        android:layout_below="@id/icbmw"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/mvbtn"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/icmv"
        android:layout_alignBottom="@id/icmv"
        android:layout_marginEnd="7dp"
        android:text="@string/discover"
        android:backgroundTint="#393E46"
        android:textSize="10sp"
        android:textStyle="italic"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bawah"
        android:layout_below="@id/icmv"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
